<section class="mt-3 mb-5">
    <div class="container">
        <div class="row mt-0">
            <a href="/admin/add-products" class="btn btn-outline-success" role="button" style="width:150px;margin:auto " >Add Product</a>
        </div>
        <div class="mt-5">
        <table class="table mt-4" id="myTable">
            <thead >
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Edit/Delete</th>
                    
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td style="width: 350px;">{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td><img style="width:35px; height:50px;" src="/product-image/{{this._id}}.jpg"></td>
                   <td style="width:200px ;"><a href="/admin/edit-product/{{this._id}}"  class="btn btn-outline-primary ">Edit</a>
                  <a href="/admin/delete-product/{{this._id}}"  class="btn btn-outline-danger float-left" onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
                   </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</section>


<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>

<style>
  .btn:focus {
  outline: none;
  box-shadow: none;
}
</style>