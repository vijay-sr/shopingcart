<section class="container">
  <table class="table align-middle mt-3 bg-white">
    <thead class="bg-light">
      <tr>
        <th>Order Date</th>
        <th>Address</th>
        <th>Amount</th>
        <th>Payment</th>
        <th>Status</th>
        <th></th>

      </tr>
    </thead>
    <tbody>
    {{#each orders}}

      <tr>
        <td>
          </div>
          <div class="d-flex align-items-center">
            <p class="fw-bold mb-1">{{this.date}}</p>
            <p class="text-muted mb-0"></p>
          </div>
        </td>
        <td >
          <p class="fw-normal mb-1">{{this.deliveryDetails.name}}</p>
          <p class="text-muted mb-0" style="font-size: smaller;">{{this.deliveryDetails.address}}</p>
          <p class="text-muted mb-0" style="font-size: smaller;">{{this.deliveryDetails.mobile}}</p>
          <p class="text-muted mb-1" style="font-size: smaller;">{{this.deliveryDetails.pincode}}</p>
        </td>
        <td>Rs.{{this.totalAmount}}</td>
        <td>{{this.paymentMethod}}</td>
        <td>{{this.status}}</td>
        <td>
          <button type="button" onclick="location.href='/viewOrderProduct/{{this._id}}' "
            class="btn btn-primary btn-sm btn-rounded">
            View Products
          </button>
        </td>
      </tr>
    </tbody>
    {{/each}}
  </table>
</section>

